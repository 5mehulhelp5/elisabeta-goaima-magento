        <tab id="mycompany_tab" translate="label" sortOrder="10">
            <label>MyCompany Settings</label>
        </tab>
        <section id="legalperson_config" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Legal Person Checkout</label>
            <tab>mycompany_tab</tab>
            <resource>MyCompany_LegalPerson::config</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Legal Person</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
