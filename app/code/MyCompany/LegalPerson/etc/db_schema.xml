<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_address">
        <column xsi:type="varchar" name="legal_cui" nullable="true" length="255" comment="Legal CUI"/>
        <column xsi:type="varchar" name="legal_company" nullable="true" length="255" comment="Legal Company"/>
        <column xsi:type="varchar" name="street_number" nullable="true" length="255" comment="Street Number"/>
        <column xsi:type="varchar" name="building" nullable="true" length="255" comment="Building (Bloc)"/>
        <column xsi:type="varchar" name="floor" nullable="true" length="255" comment="Floor (Etaj)"/>
        <column xsi:type="varchar" name="apartment" nullable="true" length="255" comment="Apartment"/>
    </table>

    <table name="sales_order_address">
        <column xsi:type="varchar" name="legal_cui" nullable="true" length="255" comment="Legal CUI"/>
        <column xsi:type="varchar" name="legal_company" nullable="true" length="255" comment="Legal Company"/>
        <column xsi:type="varchar" name="street_number" nullable="true" length="255" comment="Street Number"/>
        <column xsi:type="varchar" name="building" nullable="true" length="255" comment="Building (Bloc)"/>
        <column xsi:type="varchar" name="floor" nullable="true" length="255" comment="Floor (Etaj)"/>
        <column xsi:type="varchar" name="apartment" nullable="true" length="255" comment="Apartment"/>
    </table>

    <table name="ro_localities" resource="default" engine="innodb" comment="Romanian Localities">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="region_id" padding="10" unsigned="true" nullable="false" comment="Magento Region ID"/>
        <column xsi:type="varchar" name="city_name" nullable="false" length="255" comment="City Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="RO_LOCALITIES_REGION_ID" indexType="btree">
            <column name="region_id"/>
        </index>
    </table>
</schema>
