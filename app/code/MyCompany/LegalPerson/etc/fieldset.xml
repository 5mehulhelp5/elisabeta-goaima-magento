<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
<!--        defines the mapping for the conversion from a quote address to an order address object -->
        <fieldset id="sales_convert_quote_address">
            <field name="legal_cui">
                <aspect name="to_order_address" />
            </field>
            <field name="legal_company">
                <aspect name="to_order_address" />
            </field>
            <field name="street_number">
                <aspect name="to_order_address" />
            </field>
            <field name="building">
                <aspect name="to_order_address" />
            </field>
            <field name="floor">
                <aspect name="to_order_address" />
            </field>
            <field name="apartment">
                <aspect name="to_order_address" />
            </field>
        </fieldset>

<!--        the conversion from a saved address of a registered customer to a shopping cart address-->
        <fieldset id="customer_address">
            <field name="legal_cui">
                <aspect name="to_quote_address" />
            </field>
            <field name="legal_company">
                <aspect name="to_quote_address" />
            </field>
            <field name="street_number">
                <aspect name="to_quote_address" />
            </field>
            <field name="building">
                <aspect name="to_quote_address" />
            </field>
            <field name="floor">
                <aspect name="to_quote_address" />
            </field>
            <field name="apartment">
                <aspect name="to_quote_address" />
            </field>
        </fieldset>
    </scope>
</config>
